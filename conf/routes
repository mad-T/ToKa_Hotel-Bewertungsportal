# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     	/					                    controllers.Application.index()
GET			/index.scala.html						controllers.Application.index()
GET			/contact.scala.html						controllers.Application.contact()
GET			/goodbye.scala.html						controllers.Application.goodbye()
GET			/agbs.scala.html						controllers.Application.agbs()
GET			/impressum.scala.html					controllers.Application.impressum()
GET			/information_1hotel.scala.html			controllers.Application.information_1hotel()
GET			/login.scala.html						controllers.Application.login()
GET			/newsletter.scala.html					controllers.Application.newsletter()
GET			/profile.scala.html						controllers.Application.profile()
GET			/rate_hotel.scala.html					controllers.Application.rate_hotel()
GET			/registration.scala.html				controllers.Application.registration()
GET			/results_search_hotel.scala.html		controllers.Application.results_search_hotel(land, stadt, hotel)
GET			/search_hotel.scala.html				controllers.Application.search_hotel()
GET			/welcome.scala.html						controllers.Application.welcome()

# ToKa Actions 

# Login überprüfen
GET			/checkLogin								controllers.Application.checkLogin(email, password)
# Logout
#GET			/Logout									controllers.Application.goodbye()
GET			/registration1.scala.html							controllers.Application.registration1(email)

# Suche aus dem Header
GET			/results_search_hotel_fromHeader.scala.html			controllers.Application.results_search_hotel_fromHeader(hotel)
# Suche aus dem Body (erweiterte Suche)
GET			/results_search_hotel_enhanced.scala.html			controllers.Application.results_search_hotel_enhanced(land, stadt, hotel, verpflegung)
# Registrierung beim Sumbitten
GET			/registration1.scala.html							controllers.Application.registration1(email)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)